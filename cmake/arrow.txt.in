cmake_minimum_required(VERSION 3.7.2)

project(arrow-download NONE)

include(ExternalProject)
ExternalProject_Add(apachearrow
  GIT_REPOSITORY    https://github.com/apache/arrow.git
  GIT_TAG           apache-arrow-5.0.0
  SOURCE_DIR        "${CMAKE_BINARY_DIR}/arrow-src"
  BINARY_DIR        "${CMAKE_BINARY_DIR}/arrow-build"
  CONFIGURE_COMMAND ""
  BUILD_COMMAND     ""
  INSTALL_COMMAND   ""
  TEST_COMMAND      ""
  CMAKE_ARGS        "-DCMAKE_TOOLCHAIN_FILE=${CMAKE_TOOLCHAIN_FILE} -DFLATBUFFERS_BUILD_TESTS=OFF"
)
