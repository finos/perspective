{
    "name": "@finos/perspective",
    "version": "1.3.6",
    "description": "Perspective.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/finos/perspective"
    },
    "author": "",
    "license": "Apache-2.0",
    "unpkg": "dist/umd/perspective.js",
    "jsdelivr": "dist/umd/perspective.js",
    "main": "dist/umd/perspective.js",
    "exports": {
        ".": {
            "node": "./dist/cjs/perspective.node.js",
            "require": "./dist/umd/perspective.js",
            "import": "./dist/umd/perspective.js"
        },
        "./dist/": "./dist/",
        "./cjs/": "./dist/cjs/",
        "./esm/": "./dist/esm/",
        "./cdn/": "./dist/cdn/",
        "./src/": "./src/",
        "./pkg/": "./dist/pkg/",
        "./package.json": "./package.json"
    },
    "publishConfig": {
        "access": "public"
    },
    "engines": {
        "node": ">=12"
    },
    "files": [
        "dist/**/*",
        "src/**/*",
        "index.d.ts"
    ],
    "types": "index.d.ts",
    "scripts": {
        "build": "node build.js",
        "docs": "npm-run-all docs:jsdoc docs:deploy",
        "docs:jsdoc": "jsdoc2md src/js/perspective.js -p list --separators --no-gfm > README.md",
        "docs:deploy": "(echo \"---\nid: perspective\ntitle: perspective API\n---\n\n\"; cat README.md) > ../../docs/obj/perspective.md",
        "test:run": "jest --color --ci --noStackTrace --testPathIgnorePatterns='timezone'",
        "test_timezone:run": "jest --color --ci --config=test/config/timezone/jest.config.js --rootDir=. timezone.spec.js",
        "test": "npm-run-all test:run",
        "clean": "rimraf dist"
    },
    "jest": {
        "roots": [
            "test/js"
        ],
        "transform": {},
        "transformIgnorePatterns": [
            "/build/"
        ],
        "verbose": true,
        "testURL": "http://localhost/",
        "automock": false
    },
    "dependencies": {
        "fflate": "^0.7.2",
        "ws": "^6.1.2"
    },
    "devDependencies": {
        "@finos/perspective-build": "^1.3.6",
        "@finos/perspective-cpp": "^1.3.6",
        "jsverify": "^0.8.4",
        "lodash": "^4.17.4",
        "moment": "^2.19.1",
        "papaparse": "^5.2.0"
    }
}
