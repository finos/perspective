{
    "name": "@finos/perspective-cli",
    "version": "0.7.0",
    "description": "Perspective.js CLI",
    "main": "build/index.js",
    "publishConfig": {
        "access": "public"
    },
    "files": [
        "build/**/*",
        "perspective",
        "babel.config.js"
    ],
