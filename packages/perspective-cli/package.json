    },
    "repository": {
        "type": "git",
        "url": "https://github.com/finos/perspective"
    },
    "author": "",
    "license": "Apache-2.0",
    "bin": {
        "perspective": "perspective"
    },
    "dependencies": {
        "@finos/perspective": "^0.7.0",
        "@finos/perspective-viewer": "^0.7.0",
        "@finos/perspective-viewer-d3fc": "^0.7.0",
        "@finos/perspective-viewer-datagrid": "^0.7.0",
        "commander": "^2.19.0",
        "core-js": "^3.6.4"
    }
}