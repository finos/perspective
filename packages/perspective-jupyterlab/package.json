{
    "name": "@finos/perspective-jupyterlab",
    "version": "0.6.2",
    "description": "Perspective.js",
    "files": [
        "dist/*.d.ts",
        "dist/*.js.map",
        "dist/*.js",
        "dist/*.wasm",
        "src/css/*.css",
        "babel.config.js"
    ],
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "directories": {
        "dist": "dist/"
    },
    "license": "Apache-2.0",
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "bench": "npm-run-all bench:build bench:run",
        "bench:build": "echo \"No Benchmarks\"",
        "bench:run": "echo \"No Benchmarks\"",
        "clean:screenshots": "rimraf \"screenshots/**/*.@(failed|diff).png\"",
        "test:build": "cpx \"test/html/*\" dist/umd && cpx \"test/csv/*\" dist/umd && cpx \"test/css/*\" dist/umd && webpack --color --config src/config/webpack.config.js",
        "test:run": "jest --rootDir=. --config=test/config/jest.config.js --color --verbose",
        "test": "npm-run-all test:build test:run",
        "build": "npm-run-all -s build:webpack build:labextension",
        "build:webpack": "webpack --color --config src/config/plugin.config.js",
        "build:nbextension": "webpack --color --config src/config/notebook.config.js",
        "build:labextension": "rimraf ../../python/perspective/perspective/labextension && jupyter labextension build .",
        "clean": "rimraf dist",
        "version": "yarn build"
    },
    "dependencies": {
        "@finos/perspective": "^0.6.2",
        "@finos/perspective-viewer": "^0.6.2",
        "@finos/perspective-viewer-d3fc": "^0.6.2",
        "@finos/perspective-viewer-datagrid": "^0.6.2",
        "@jupyter-widgets/base": "^3.0.0 || ^4.0.0",
        "@jupyterlab/application": "^3.0.0",
        "@lumino/application": "^1.7.3",
        "@lumino/widgets": "^1.9.3"
    },
    "devDependencies": {
        "@finos/perspective-test": "^0.6.2",
        "@jupyterlab/builder": "3.0.6",
        "@jupyter-widgets/base-manager": "^1.0.0-alpha.0",
        "@types/jest": "^23.3.9",
        "@types/node": "^11.11.0",
        "file-loader": "^0.11.1",
        "identity-obj-proxy": "^3.0.0",
        "isomorphic-fetch": "^2.2.1",
        "jest-transform-css": "^2.0.0",
        "source-map-support": "^0.5.9",
        "ts-jest": "^25.1.0",
        "typescript": "^3.7.4"
    },
    "jupyterlab": {
        "extension": "dist/index.js",
         "webpackConfig": "./src/config/prebuilt.config.js",
         "outputDir": "../../python/perspective/perspective/labextension",
         "sharedPackages": {
             "@jupyter-widgets/base": {
               "bundled": false,
               "singleton": true
             }
        }
    }
}